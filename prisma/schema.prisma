generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Invitation {
  id            Int      @id @default(autoincrement())
  userId        String
  invitedUserId String
  createdAt     DateTime @default(now())
}

model InvitationCode {
  id        Int      @id @default(autoincrement())
  userId    String
  code      String
  createdAt DateTime @default(now())
}

model Discount {
  id           Int       @id @default(autoincrement())
  userId       String
  title        String
  description  String?
  code         String
  value        String
  valueType    String    @default("FIXED_AMOUNT")
  draftOrderId String?
  usedAt       DateTime?
  createdAt    DateTime  @default(now())
}

model DraftOrderRelation {
  id           Int    @id @default(autoincrement())
  orderId      String
  draftOrderId String
}

model FeedbackSubmission {
  id          Int      @id @default(autoincrement())
  lineUserId  String
  submittedAt DateTime
}

model Session {
  id      String   @id
  sid     String   @unique
  data    String?  @db.Text
  expires DateTime
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}
